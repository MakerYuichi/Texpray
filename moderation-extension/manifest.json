{
    "manifest_version": 3,
    "name": "Texspray",
    "version": "1.0",
    "description": "Deflects and reflects on toxic messages before sending",
    "permissions": ["scripting", "storage", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["*://*.teams.microsoft.com/*", "*://*.slack.com/*", "*://web.whatsapp.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {"service_worker":"background.js"}, 
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icons"
    }
}

 